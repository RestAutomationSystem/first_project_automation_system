# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET    /login                          		controllers.Application.login()
GET    /confirm                          	controllers.Application.confirm(email:String)
POST    /login                         	    controllers.Application.authenticate()
GET		/logout								controllers.Application.logout()
GET    /register                          	controllers.Application.registerForm()
POST   /register                          	controllers.Application.register()
GET    /list                          		controllers.Application.list()


#Restaurants
GET    /restaurants                          	controllers.Restaurants.index()
POST    /restaurants                          	controllers.Restaurants.newRestaurant()
GET    /restaurants/:id/delete                 controllers.Restaurants.deleteRestaurant(id: Integer)
POST    /restaurants/:id                        controllers.Restaurants.updateRestaurant(id: Integer)
GET    /restaurants/:id                         controllers.Restaurants.restaurantPage(id: Integer)

#Sections
GET    /restaurants/:id/sections                          	controllers.Sections.index(id: Integer)
POST   /restaurants/:id/sections                          	controllers.Sections.newSection(id: Integer)
GET    /sections/:id/delete                 controllers.Sections.deleteSection(id: Integer)
POST    /sections/:id                        controllers.Sections.updateSection(id: Integer)
GET    /sections/:id                         controllers.Sections.sectionPage(id: Integer)

#Places
GET    /sections/:id/places                          	controllers.Places.index(id: Integer)
POST   /sections/:id/places                          	controllers.Places.newPlace(id: Integer)
GET    /places/:id/delete                 controllers.Places.deletePlace(id: Integer)
POST    /places/:id                        controllers.Places.updatePlace(id: Integer)
GET    /places/:id                         controllers.Places.placePage(id: Integer)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

