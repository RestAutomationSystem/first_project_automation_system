#Users
GET     /users                        controllers.Users.index()
GET     /new_user                     controllers.Users.addingUserPage()
POST    /users                        controllers.Users.newUser()
GET     /users/:email/delete             controllers.Users.deleteUser(email: String)
POST    /users/:email                    controllers.Users.updateUser(email: String)
GET     /users/:email                    controllers.Users.userPage(email: String)

